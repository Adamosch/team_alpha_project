<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to image_tag("bookshelfy-logo.png", style:"height:70px"), root_path, id: "logo"%>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to "My library", user_path(current_user), class:"a"%></li>
          <li><%= link_to "All books", user_books_path(current_user) %></li>
          <li><%= link_to "All users", users_path %></li>
          <li><%= link_to "Edit my profile", edit_user_registration_path %></li>
          <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
        <% else %>
           <li><%= link_to "Log in", new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
