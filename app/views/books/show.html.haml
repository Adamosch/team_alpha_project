.container
  %br/
  %h1= @book.title
  %br/
  .well
    .row
      .col-md-4 
        = image_tag("#{@book.cover}", alt: "book cover", style:"width:300px;height:300px;")
      .col-md-8
        %b Author:
        #{@book.author}
        %br/
        %b Description:
        #{@book.description}
        %br/
        %b Rating:
        5/5
.container
  %h2 Users offering this book:
  - Book.where(title: @book.title) && Book.where(author: @book.author).each do |book|
    %br/
    .well
      .row
        .col-md-3 
          = image_tag("#{book.user.avatar}", alt: "user avatar", style:"width:50px;height:50px;")
        .col-md-3 
          = book.user.first_name + " " + book.user.last_name
        .col-md-3 Status
        .col-md-3
          .btn.btn-success Borrow

